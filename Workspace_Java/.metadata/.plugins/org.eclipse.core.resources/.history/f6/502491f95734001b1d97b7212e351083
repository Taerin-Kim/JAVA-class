package com.test01;

import java.util.Arrays;

public class MTest03 {

	/*
	 * 1번문제 a b c d e f g h i j k l m n o p q r s t u v w x y z 출력! 단, 일차원
	 * 배열에(char[]), 반복문을 사용하여 알파벳을 저장 출력
	 */
	public static void test(String[][] arr) {

		for (char i = 'a'; i < arr.length; i++) {
			System.out.println();
		}

	}

	public static void main(String[] args) {
		char[] ch = new char[26];
		for (int i = 0; i < ch.length; i++) {
			ch[i] = (char) ('a' + i);
		}
		System.out.println(Arrays.toString(ch));

		for (int i = 1; i <= ch.length; i++) {
			System.out.print(ch[i - 1] + " ");
			if (i % 6 == 0) {
				System.out.println();
			}
		}

		// 2번 1번에서 만든 배열을 거꾸로 출력
		System.out.println("\n");

		int tmp = 1;

		for (int i = ch.length; i > 0; i--) {
			System.out.printf("%s ", ch[i - 1]);
			if (i % 6 == 0) {
				System.out.println();
			}
			tmp++;
		}
		
		System.out.println("\n");

		// 3번 1번에서 만든 배열을 대문자로 바꿔 출력
		int cnt = 1;
		for (int i = 0; i < ch.length; i++) {
			ch[i] = Character.toUpperCase(ch[i]);
			System.out.printf("%s ", ch[i]);

			if (cnt % 6 == 0) {
				System.out.println();

			}
			cnt++;
		}
	}

}